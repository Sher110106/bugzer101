{
  "version": 2,
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/backend/server.js"
    }
  ],
  "env": {
    "PUPPETEER_CACHE_DIR": "/absolute/path/to/your/project/backend/cachePuppet",
    "MONGODB_URI": "your_mongodb_uri"
  },
  "build": {
    "env": {
      "PUPPETEER_CACHE_DIR": "/absolute/path/to/your/project/backend/cachePuppet"
    }
  }
}
