{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "env": {
    "PUPPETEER_CACHE_DIR": "./backend/cachePuppet",
    "MONGODB_URI": "mongodb+srv://admin:yourpassword@cluster0.abeeksn.mongodb.net/?retryWrites=true&w=majority&appName=yourAppName"
  },
  "installCommand": "npx puppeteer browsers install chrome"
}
